---
import { siteConfig } from "@/data/site";

const footerLinks = [
  { href: "/blog", label: "Blog" },
  { href: "/projects", label: "Projects" },
  { href: "/resources", label: "Resources" },
  { href: "/subscribe", label: "Subscribe" }
];
---

<footer class="mt-16 border-t border-line/80 bg-paper/90">
  <div class="mx-auto grid max-w-6xl gap-6 px-4 py-10 md:grid-cols-[1.5fr_1fr] md:px-6">
    <div class="panel rounded-xl border p-5">
      <p class="font-display text-lg tracking-[0.04em] text-ink">&lt; Mr Panda &gt;</p>
      <p class="mt-2 max-w-xl text-sm text-ink/72">{siteConfig.tagline}</p>
      <p class="mt-4 font-mono text-[11px] uppercase tracking-[0.16em] text-ink/52">
        Learn in Public · Build in Public · Think in Public
      </p>
    </div>

    <div class="grid grid-cols-1 gap-2 text-sm sm:grid-cols-2">
      {footerLinks.map((item) => (
        <a
          href={item.href}
          class="border border-line/80 bg-paper px-3 py-2 font-mono text-[11px] uppercase tracking-[0.1em] text-ink/70 transition hover:border-accent/45 hover:text-ink"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</footer>
